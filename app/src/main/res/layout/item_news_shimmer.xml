<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_sm_md">

    <View
        android:id="@+id/ivContent"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorShimmer"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sample" />

    <View
        android:id="@+id/tvTitle"
        android:layout_width="@dimen/space_0"
        android:layout_height="@dimen/space_lg"
        android:layout_marginTop="@dimen/space_sm_md"
        android:background="@color/colorShimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivContent" />

    <View
        android:id="@+id/tvDesc"
        android:layout_width="@dimen/space_0"
        android:layout_height="@dimen/space_hg"
        android:layout_marginTop="@dimen/space_sm"
        android:background="@color/colorShimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <View
        android:id="@+id/tvTimeAgo"
        android:layout_width="100dp"
        android:layout_height="@dimen/space_md"
        android:layout_marginTop="@dimen/space_sm"
        android:layout_marginBottom="@dimen/space_sm_md"
        android:background="@color/colorShimmer"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>